# Development Environment Configuration for Burly MCP
# Source this file before running tests: source .env.development

# Logging configuration - use local directories for development
export LOG_DIR="./logs"
export LOG_LEVEL="INFO"

# Policy configuration
export POLICY_FILE="policy/tools.yaml"

# Blog directories - use local test directories
export BLOG_STAGE_ROOT="./test_data/blog/stage"
export BLOG_PUBLISH_ROOT="./test_data/blog/publish"

# Timeouts
export DEFAULT_TIMEOUT_SEC="30"
export OUTPUT_TRUNCATE_LIMIT="10240"

# Audit logging - use local directory
export AUDIT_LOG_PATH="./logs/audit.jsonl"
export AUDIT_LOG_DIR="./logs"

# Notifications - disable for testing unless specifically needed
export NOTIFICATIONS_ENABLED="false"
export GOTIFY_URL=""
export GOTIFY_TOKEN=""

# Server identification
export SERVER_NAME="burly-mcp"
export SERVER_VERSION="0.1.0"

echo "Development environment configured for Burly MCP"
echo "Log directory: $LOG_DIR"
echo "Policy file: $POLICY_FILE"
echo "Blog stage: $BLOG_STAGE_ROOT"
echo "Blog publish: $BLOG_PUBLISH_ROOT"