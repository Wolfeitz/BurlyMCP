# Testing Environment Configuration for Burly MCP
# This configuration enables actual functionality testing with mock services

# Logging configuration - use local directories for testing
export LOG_DIR="./logs"
export LOG_LEVEL="INFO"

# Policy configuration
export POLICY_FILE="config/policy/tools.yaml"

# Blog directories - use local test directories
export BLOG_STAGE_ROOT="./test_data/blog/stage"
export BLOG_PUBLISH_ROOT="./test_data/blog/publish"

# Timeouts
export DEFAULT_TIMEOUT_SEC="30"
export OUTPUT_TRUNCATE_LIMIT="10240"

# Audit logging - use local directory
export AUDIT_LOG_PATH="./logs/audit.jsonl"
export AUDIT_LOG_DIR="./logs"

# Notifications - ENABLE for testing with mock server
export NOTIFICATIONS_ENABLED="true"
export GOTIFY_URL="http://127.0.0.1:0"  # Will be updated by test harness
export GOTIFY_TOKEN="test-token-12345"

# Server identification
export SERVER_NAME="burly-mcp"
export SERVER_VERSION="0.1.0"

echo "Testing environment configured for Burly MCP"
echo "Log directory: $LOG_DIR"
echo "Policy file: $POLICY_FILE"
echo "Blog stage: $BLOG_STAGE_ROOT"
echo "Blog publish: $BLOG_PUBLISH_ROOT"
echo "Gotify URL: $GOTIFY_URL (will be updated by test harness)"